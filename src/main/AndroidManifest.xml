<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isaac.PhoneBook">

    <uses-permission android:name="android.permission.PERSISTENT_ACTIVITY"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonApp">
        <activity android:name="com.isaac.PhoneBook.AddContact"></activity>
        <activity android:name="com.isaac.PhoneBook.DetailsActivity" />
        <activity android:name="com.isaac.PhoneBook.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>